{% extends 'base.html.twig' %}

{% block title %}{{parent()}} | Liste des Verres{% endblock %}

{% block body %}
    <h1>Liste des Verres</h1>

    <a href="{{ path('app_verre_new') }}" class="btn btn-secondary">Ajouter</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Fournisseur</th>
                <th></th>
                <th class="text-end">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for verre in verres %}
            <tr>
                <td>{{ verre.id }}</td>
                <td>{{ verre.libelle }}</td>
                <td>{{ verre.fournisseur.nom }}</td>
                <td class="text-end">
                    <a href="{{ path('app_verre_edit', {'id': verre.id}) }}" class="text-success"><i class="fa-solid fa-pencil"></i></a>
                </td>
                <td class="text-end">
                    {{ include('verre/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de donn√©es</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
