{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Profil{% endblock %}

{% block body %}
    <h1>Profil de {{ user.nom }} {{ user.prenom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ user.tel }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse.numRue }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.adresse.ville.libelle }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ user.adresse.codespostaux.numero }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_modif-profil', {'id': user.id}) }}" class="btn btn-secondary">Modifier le profil</a>

{% endblock %}
